<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.3.0//EN"
     "http://jakarta.apache.org/commons/dtds/validator_1_3_0.dtd">
<form-validation>
	<formset>
		<form name="ModificarDatosUsuario">
			<field property="password" depends="required,minlength">
				<arg key="password" position="0"/>
				<arg name="minlength" key="${var:minlength}" resource="false" position="1"/>
				<var>
					<var-name>minlength</var-name>
					<var-value>6</var-value>
				</var>
			</field>
			<field property="passwordNueva" depends="required,minlength">
				<arg key="passwordNueva" position="0"/>
				<arg name="minlength" key="${var:minlength}" resource="false" position="1"/>
				<var>
					<var-name>minlength</var-name>
					<var-value>6</var-value>
				</var>
			</field>
			<field property="password2Nueva"  depends="required,minlength">
				<arg  key="password2Nueva" position="0"/>
				<arg name="minlength" key="${var:minlength}" resource="false" position="1"/>
				<var>
					<var-name>minlength</var-name>
					<var-value>6</var-value>
				</var>
			</field>

		</form>
		<form name="usernamePasswordLoginForm">
			<field depends="required,minlength" property="josso_password">
				<arg position="0" key="password" />
				<arg position="1" key="${var:minlength}" name="minlength" resource="false" />
				<var>
					<var-name>minlength</var-name>
					<var-value>6</var-value>
				</var>
			</field>
			<field depends="required,minlength" property="josso_username">
				<arg position="0" key="logon"/>
				<arg position="1" key="${var:minlength}" name="minlength" resource="false"/>
				<var>
					<var-name>minlength</var-name>
					<var-value>6</var-value>
				</var>
			</field>
		</form>
	</formset>
</form-validation>
