<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<!-- ======================================================= -->
	<!-- Forms used by different authentication schemes -->
	<!-- ======================================================= -->
	<form-beans>
		<form-bean name="usernamePasswordLoginForm" type="org.apache.struts.validator.DynaValidatorForm">
			<form-property name="josso_username" type="java.lang.String" initial=""/>
            <form-property name="josso_password" type="java.lang.String" initial=""/>
            <form-property name="josso_rememberme" type="java.lang.Boolean"/>
            <form-property name="josso_cmd" type="java.lang.String" initial=""/>
            <form-property name="josso_back_to" type="java.lang.String" initial=""/>
		</form-bean>
		<!-- New forms needed for other auth. schemes go here -->
		<form-bean name="ModificarDatosUsuario" type="admUsuario.forms.ModificarDatosUsuario"/>
	</form-beans>
	<global-exceptions>
		<exception handler="exception.RpbaExceptionHandler" type="java.lang.Exception" key="generic" scope="request"/>
	</global-exceptions>
	<!-- ======================================================= -->
	<!-- Global forwards common to all auth. schemes -->
	<!-- ======================================================= -->
	<global-forwards>
		<!-- Login entry point -->
		<forward name="login" path="/signon/login.do"/>
		<forward name="loginInterno" path="/signon/interno-password.do"/>
		<forward name="logout" path="/signon/logout.do"/>
		<forward name="logoutInterno" path="/signon/logoutInterno.do"/>
		<!-- This forwards use struts tiles deffinitions ... -->
		<!-- Login result, use a tile name defined in tiles-signon.xml instead of a .jsp file name -->
		<!--forward name="login-result" path="josso.signon.loginResult"/-->
		<!-- General error page, use a tile name defined in tiles-signon.xml instead of a .jsp file name -->
		<!-- forward name="error" path="josso.signon.error"/-->
		<forward name="error" path="/Error.jsp"/>
	</global-forwards>
	<!-- ======================================================= -->
	<!-- Action mappings                                         -->
	<!-- ======================================================= -->
	<action-mappings>
		<!--
        Generic entry point to SSO login, this action will redirect to the propper action
        based on the configured authentication scheme.
        -->
		<action path="/signon/login" type="org.josso.gateway.signon.LoginSelectorAction" >
			<!-- Different login for each authentication scheme -->
			<forward name="username-password" path="/signon/usernamePasswordLogin.do"/>
			<forward name="basic-authentication" path="/signon/usernamePasswordLogin.do"/>
			<!-- Other auth.scheme login pages go here -->
			<!--forward name="strong-authentication" path="8443/josso/signon/strongAuthenticationLogin.do"/-->
			<!--forward name="strong-authentication" path="/josso/signon/strongAuthenticationLogin.do"/-->
		</action>
		<action path="/signon/logout" type="org.josso.gateway.signon.LogoutAction">
			<forward name="success" path="/signon/login.do"/>
		</action>
		
<!-- 		<action path="/signon/logoutInterno" type="org.josso.gateway.signon.LogoutAction">
			<forward name="success" path="/signon/LDAPPasswordLogin.do"/>
		</action>-->
		<!-- ======================================================= -->
		<!-- Specific action mappings for different auth schemes.    -->
		<!-- ======================================================= -->
		<!-- Struts action used for username-password authentication scheme -->
		<action path="/signon/usernamePasswordLogin" type="org.josso.gateway.signon.UsernamePasswordLoginAction" name="usernamePasswordLoginForm" validate="false">
			<forward name="login-result" path="/WEB-INF/jsp/signon/habilitado.jsp"/>
			<forward name="login-page" path="/WEB-INF/jsp/signon/usernamePasswordLogin.jsp"/>
		</action>
		<action path="/signon/LDAPPasswordLogin" type="org.josso.gateway.signon.UsernamePasswordLoginAction" name="usernamePasswordLoginForm" validate="false">
			<forward name="login-result" path="/WEB-INF/jsp/signon/habilitado.jsp"/>
			<forward name="login-page" path="/WEB-INF/jsp/signon/LDAPPasswordLogin.jsp"/>
		</action>
		<!-- Struts action used for strong authentication scheme -->
		<!--action path="/signon/strongAuthenticationLogin" type="org.josso.gateway.signon.StrongLoginAction" name="strongAuthenticationLogin" validate="false">
			<forward name="login-page" path="josso.signon.usernamePasswordLogin"/>
		</action-->
		<!-- New actions needed for other auth.schemes go here -->
		<action input="/WEB-INF/jsp/signon/cambiarPassword.jsp" className="rpba.ActionMappingRpba" name="ModificarDatosUsuario" path="/signon/cambiarPassword"  type="admUsuario.actions.CambiarPassword" >
			<forward name="exito" path="/signon/index.jsp"/>
			<forward name="errorPassword" path="/WEB-INF/jsp/signon/cambiarPassword.jsp"/>
			<forward name="mensaje" path="/WEB-INF/jsp/signon/cambiarPassword.jsp"/>
		</action>
	</action-mappings>
	<!-- ======================================================= -->
    <!-- Associated Messages Ressource settings                  -->
    <!-- ======================================================= -->
    <message-resources parameter="MessageResources" />
    <!-- =================================================== Validator plugin -->
	<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
		<set-property property="pathnames" value="/WEB-INF/validator-rules-compressed.xml,/WEB-INF/validation.xml"/>
	</plug-in>
</struts-config>